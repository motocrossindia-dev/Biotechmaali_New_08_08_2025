{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter Debug (Android)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "deviceId": "emulator-5554",
            "console": "debugConsole",
            "args": ["--debug"]
        },
        {
            "name": "Flutter Debug (iOS Simulator)",
